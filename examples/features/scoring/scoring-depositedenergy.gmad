c1: rcol, l=0.2*m, material="W";
l1: line=(c1);
use, l1;

denergy: scorer, type="depositedenergy";

! mesh in collimator
meshCol: scorermesh, nx=10, ny=10, nz=5, scoreQuantity="denergy",
	 xsize=40*cm, ysize=40*cm, zsize=10*cm,
	 z=10*cm;

beam, particle="proton",
      energy=50*GeV;

option, physicsList="g4FTFP_BERT",
	defaultRangeCut=1*cm,
	minimumKineticEnergy=100*MeV,
	elossHistoBinWidth=5*mm,
	seed=123,
	ngenerate=20;
