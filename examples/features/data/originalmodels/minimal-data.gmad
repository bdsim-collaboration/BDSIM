d1: drift, l=20*cm;
c1: rcol, l=1*cm, material="Al";

l1: line=(d1,d1,c1,d1,d1);
use, l1;

beam, particle="e-",
      kineticEnergy=1*GeV,
      distrType="gauss",
      sigmaX=1*cm,
      sigmaXp=1e-4,
      sigmaY=1*cm,
      sigmaYp=1e-4;

option, physicsList="em",
	minimumKineticEnergy=10*MeV;

sample, all;

option, storeMinimalData=1;